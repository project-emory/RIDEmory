<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<!--
If specific project-wide formatting configurations need to be specified, do them here
Documentation: https://help.eclipse.org/latest/index.jsp?topic=%2Forg.eclipse.jdt.doc.isv%2Freference%2Fapi%2Forg%2Feclipse%2Fjdt%2Fcore%2Fformatter%2Fpackage-summary.html under DefaultCodeFormatterConstants

Example from Google's Java Style Guide: https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml

To enable save on format with VS Code and the Java extension pack, add this file's path when prompted after doing Ctrl+Shift+P -> Java: Open Java Formatter Settings -> Edit (or in settings.json)
-->

<profiles version="1">
    <profile kind="CodeFormatterProfile" name="RIDEmory Formatting" version="1">
        <setting id="org.eclipse.jdt.core.compiler.source" value="1.9"/>
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_after_package" value="1"/>
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_after_imports" value="1"/>
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_before_first_class_body_declaration" value="-1"/>
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_after_last_class_body_declaration" value="-1"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_annotation_on_local_variable" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_annotation_on_method" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_annotation_on_field" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_annotation_on_type" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_annotation_on_parameter" value="do not insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_annotation_on_package" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.indent_parameter_description" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation" value="2"/>
    </profile>
</profiles>